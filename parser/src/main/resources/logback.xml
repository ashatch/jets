<configuration>
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-14(%d{HH:mm:ss.SSS}) %highlight(%-7level) %-60logger{55} : %yellow(%msg) %n%red(%ex{short})</pattern>
        </encoder>
    </appender>

    <logger name="net.andrewhatch" level="ALL" />

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
